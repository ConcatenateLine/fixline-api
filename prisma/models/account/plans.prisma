model Plan {
  id         String     @id @default(uuid())
  key        String     @unique // e.g. "basic", "pro", "business"
  name       String
  maxTenants Int
  active     Boolean    @default(true)
  sortOrder  Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  prices     PlanPrice[]
  subscriptions Subscription[]
}
